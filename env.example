# Starfish MCP Server Configuration

# Starfish API Configuration
STARFISH_API_ENDPOINT=https://sf-redashdev.sfish.dev/api
STARFISH_USERNAME=demo
STARFISH_PASSWORD=demo

# Optional: Custom token timeout (default: 16 hours = 57600 seconds)
STARFISH_TOKEN_TIMEOUT_SECS=57600

# Optional: File server URL for direct file access
STARFISH_FILE_SERVER_URL=https://your-starfish-fileserver.com

# Cache Configuration
CACHE_TTL_HOURS=1
COLLECTIONS_REFRESH_INTERVAL_MINUTES=10

# HTTP Client Configuration
HTTP_TIMEOUT_SECONDS=30
MAX_IDLE_CONNECTIONS=100
MAX_IDLE_CONNECTIONS_PER_HOST=10

# TLS Configuration (optional)
TLS_INSECURE_SKIP_VERIFY=false
TLS_MIN_VERSION=1.2
# TLS_CERT_FILE=/path/to/client.crt
# TLS_KEY_FILE=/path/to/client.key

# Logging
LOG_LEVEL=INFO
